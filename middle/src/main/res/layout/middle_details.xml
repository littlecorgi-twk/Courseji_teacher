<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
    <RelativeLayout
      android:id="@+id/topLayout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:background="@color/blue"
      app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
          android:id="@+id/middle_sign_returnButton"
          android:layout_width="32dp"
          android:layout_height="32dp"
          android:layout_alignParentLeft="true"
          android:layout_alignParentTop="true"
          android:layout_marginTop="6dp"
          android:layout_marginBottom="6dp"
          android:fontFamily="@font/iconfont"
          android:gravity="center"
          android:includeFontPadding="false"
          android:text=""
          android:textColor="#000"
          android:textSize="30sp" />

        <androidx.appcompat.widget.AppCompatTextView
          android:layout_width="wrap_content"
          android:layout_height="32dp"
          android:layout_alignParentTop="true"
          android:layout_centerInParent="true"
          android:layout_gravity="center"
          android:layout_marginTop="6dp"
          android:layout_marginBottom="6dp"
          android:gravity="center"
          android:text="详情"
          android:textColor="?android:attr/textColorPrimary"
          android:textSize="20sp" />
    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatImageView
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:layout_marginTop="20dp"
      android:layout_marginStart="25dp"
      android:id="@+id/middle_sign_Image"
      app:layout_constraintTop_toBottomOf="@id/topLayout"
      app:layout_constraintStart_toStartOf="parent" />
    <androidx.appcompat.widget.AppCompatTextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/middle_sign_name"
      android:textSize="20sp"
      android:textColor="?android:attr/textColorPrimary"
      app:layout_constraintStart_toEndOf="@id/middle_sign_Image"
      app:layout_constraintTop_toBottomOf="@id/topLayout"
      android:layout_marginStart="15dp"
      android:layout_marginTop="18dp" />
    <androidx.appcompat.widget.AppCompatTextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/middle_sign_occupational"
      android:textSize="16sp"
      android:layout_marginStart="2dp"
      app:layout_constraintStart_toStartOf="@id/middle_sign_name"
      app:layout_constraintTop_toBottomOf="@id/middle_sign_name"
      android:layout_marginTop="0dp" />
    <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:layout_marginTop="20dp"
      app:layout_constraintTop_toBottomOf="@id/middle_sign_Image"
      android:background="#ECE9E9"
      android:id="@+id/middle_sign_splitLine" />

    <androidx.appcompat.widget.AppCompatTextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/middle_sign_label"
      android:textSize="16sp"
      android:layout_marginStart="25dp"
      app:layout_constraintStart_toStartOf="@id/middle_sign_Image"
      app:layout_constraintTop_toBottomOf="@id/middle_sign_splitLine"
      android:layout_marginTop="10dp" />
    <androidx.appcompat.widget.AppCompatButton
      android:layout_width="22dp"
      android:layout_height="22dp"
      android:background="@drawable/middle_label"
      android:layout_marginEnd="8dp"
      app:layout_constraintTop_toTopOf="@id/middle_sign_label"
      app:layout_constraintEnd_toStartOf="@id/middle_sign_label" />
    <androidx.appcompat.widget.AppCompatTextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/middle_sign_startTime"
      android:textSize="16sp"
      android:layout_marginStart="25dp"
      app:layout_constraintStart_toStartOf="@id/middle_sign_Image"
      app:layout_constraintTop_toBottomOf="@id/middle_sign_label"
      android:layout_marginTop="10dp" />
    <androidx.appcompat.widget.AppCompatButton
      android:layout_width="22dp"
      android:layout_height="22dp"
      android:background="@drawable/middle_starttime"
      android:layout_marginEnd="8dp"
      app:layout_constraintTop_toTopOf="@id/middle_sign_startTime"
      app:layout_constraintEnd_toStartOf="@id/middle_sign_startTime" />
    <androidx.appcompat.widget.AppCompatTextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/middle_sign_endTime"
      android:textSize="16sp"
      android:layout_marginStart="25dp"
      app:layout_constraintStart_toStartOf="@id/middle_sign_Image"
      app:layout_constraintTop_toBottomOf="@id/middle_sign_startTime"
      android:layout_marginTop="10dp" />
    <androidx.appcompat.widget.AppCompatButton
      android:layout_width="22dp"
      android:layout_height="22dp"
      android:background="@drawable/middle_endtime"
      android:layout_marginEnd="8dp"
      app:layout_constraintTop_toTopOf="@id/middle_sign_endTime"
      app:layout_constraintEnd_toStartOf="@id/middle_sign_endTime" />
    <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:layout_marginTop="20dp"
      app:layout_constraintTop_toBottomOf="@id/middle_sign_endTime"
      android:background="#ECE9E9"
      android:id="@+id/middle_sign_splitLine2" />
    <androidx.appcompat.widget.AppCompatTextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/middle_sign_theme"
      android:textColor="?android:attr/textColorPrimary"
      android:textSize="20sp"
      app:layout_constraintStart_toStartOf="@id/middle_sign_Image"
      app:layout_constraintTop_toBottomOf="@id/middle_sign_splitLine2"
      android:layout_marginTop="10dp" />
    <androidx.appcompat.widget.AppCompatTextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/middle_sign_title"
      android:textSize="18sp"
      app:layout_constraintStart_toStartOf="@id/middle_sign_Image"
      app:layout_constraintTop_toBottomOf="@id/middle_sign_theme"
      android:layout_marginTop="15dp" />
</androidx.constraintlayout.widget.ConstraintLayout>