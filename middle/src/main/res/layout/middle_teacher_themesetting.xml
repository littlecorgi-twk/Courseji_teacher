<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginTop="15dp"
    android:layout_marginEnd="5dp"
    app:cardCornerRadius="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/middle_TeacherTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/theme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="签到主题"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/middle_TeacherThemeText"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:ellipsize="marquee"
                android:gravity="right"
                android:hint="主题"
                android:textColor="?android:attr/textColorPrimary"
                android:singleLine="true"
                android:textSize="17sp"
                app:layout_constraintBaseline_toBaselineOf="@id/theme"
                app:layout_constraintEnd_toStartOf="@id/middle_TeacherThemeButton" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/middle_TeacherThemeButton"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/middle_right"
                app:layout_constraintBaseline_toBaselineOf="@id/theme"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/themeSplitLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#ECE9E9"
            app:layout_constraintTop_toBottomOf="@id/middle_TeacherTheme" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/middle_TeacherTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/themeSplitLine">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="签到说明"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/middle_TeacherTitleText"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:ellipsize="marquee"
                android:gravity="right"
                android:hint="说明"
                android:textColor="?android:attr/textColorPrimary"
                android:singleLine="true"
                android:textSize="17sp"
                app:layout_constraintBaseline_toBaselineOf="@id/title"
                app:layout_constraintEnd_toStartOf="@id/middle_TeacherTitleButton" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/middle_TeacherTitleButton"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/middle_right"
                app:layout_constraintBaseline_toBaselineOf="@id/title"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/titleSplitLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#ECE9E9"
            app:layout_constraintTop_toBottomOf="@id/middle_TeacherTitle" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/middle_TeacherClass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titleSplitLine">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/Class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="名单选择"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/middle_TeacherClassText"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:ellipsize="marquee"
                android:gravity="right"
                android:hint="名单"
                android:textColor="?android:attr/textColorPrimary"
                android:singleLine="true"
                android:textSize="17sp"
                app:layout_constraintBaseline_toBaselineOf="@id/Class"
                app:layout_constraintEnd_toStartOf="@id/middle_TeacherClassButton" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/middle_TeacherClassButton"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/middle_right"
                app:layout_constraintBaseline_toBaselineOf="@id/Class"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/ClassSplitLine"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_marginTop="10dp"
            android:background="#E3DDDD"
            app:layout_constraintTop_toBottomOf="@id/middle_TeacherClass" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/middle_TeacherLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ClassSplitLine">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="签到类型"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/middle_TeacherLabelText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:ellipsize="marquee"
                android:gravity="right"
                android:textColor="?android:attr/textColorPrimary"
                android:hint="类型"
                android:singleLine="true"
                app:layout_constraintBaseline_toBaselineOf="@id/label"
                app:layout_constraintEnd_toStartOf="@id/middle_TeacherLabelButton" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/middle_TeacherLabelButton"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/middle_right"
                app:layout_constraintBaseline_toBaselineOf="@id/label"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/LabelsplitLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#ECE9E9"
            app:layout_constraintTop_toBottomOf="@id/middle_TeacherLabel" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/middle_TeacherLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/LabelsplitLine">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="签到位置"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/middle_TeacherLocationText"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:ellipsize="marquee"
                android:gravity="right"
                android:hint="位置"
                android:textColor="?android:attr/textColorPrimary"
                android:singleLine="true"
                android:textSize="17sp"
                app:layout_constraintBaseline_toBaselineOf="@id/location"
                app:layout_constraintEnd_toStartOf="@id/middle_TeacherLocationButton" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/middle_TeacherLocationButton"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/middle_right"
                app:layout_constraintBaseline_toBaselineOf="@id/location"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/LocationsplitLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#ECE9E9"
            app:layout_constraintTop_toBottomOf="@id/middle_TeacherLocation" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>